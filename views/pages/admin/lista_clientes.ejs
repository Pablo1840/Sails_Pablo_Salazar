<div class="row">
    <div class="col-md-12">
  
      <h2>Listado de Clientes</h2>
  
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>nombre</th>
            <th>email</th>
            <th>Activo(a)</th>
            <th>Acci√≥n</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach( cliente => { %>
            <tr>
              <td><%=cliente.id%></td>
              <td><%=cliente.nombre%></td>
              <td><%=cliente.email%></td>
              <td><%=cliente.activa ? "Si" : "No"%></td>
              <td>
                <% if (cliente.activa) { %>
                <a href="/admin/desactivar-cliente/<%=cliente.id%>" class="btn btn-info">Desactivar Cliente</a>
                <% } else { %>
                <a href="/admin/activar-cliente/<%=cliente.id%>" class="btn btn-primary">Activar Cliente</a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
  
      <a href="/admin/agregar-foto" class="btn btn-primary">Agregar Foto</a>
  
    </div>
  
  </div>
  